{
  "name": "pretend",
  "version": "0.5.0",
  "description": "A decorator based http webservice client written in typescript",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "index.d.ts",
    "src",
    "typings/isomorphic-fetch.d.ts"
  ],
  "scripts": {
    "linter": "tslint --project ./tsconfig.json --type-check",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --sourceMap",
    "pretest": "npm run clean && tsc --inlineSourceMap",
    "test": "nyc --reporter lcov ./node_modules/.bin/ava",
    "watch:build": "tsc --watch --sourceMap",
    "watch:test": "npm test -- --watch",
    "prerelease": "npm test && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/pretend"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "license": "MIT",
  "devDependencies": {
    "@knisterpeter/standard-tslint": "1.0.3",
    "@types/node": "6.0.54",
    "ava": "0.17.0",
    "coveralls": "2.11.15",
    "cz-conventional-changelog": "1.2.0",
    "in-publish": "2.0.0",
    "nock": "9.0.2",
    "nyc": "10.0.0",
    "rimraf": "2.5.4",
    "source-map-support": "0.4.8",
    "standard-version": "4.0.0",
    "tslint": "4.2.0",
    "typescript": "2.1.4"
  },
  "dependencies": {
    "@types/isomorphic-fetch": "0.0.31",
    "isomorphic-fetch": "2.2.1",
    "omni-fetch": "0.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "dist/test/**/*-test.js"
    ],
    "source": [
      "dist/src/**/*.js"
    ],
    "require": [
      "source-map-support/register"
    ]
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "coverage",
      "dist/test"
    ]
  }
}
