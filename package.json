{
  "name": "pretend",
  "version": "0.2.2",
  "description": "A decorator based http webservice client written in typescript",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "index.d.ts",
    "src",
    "typings/isomorphic-fetch.d.ts"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --sourceMap",
    "pretest": "npm run build",
    "test": "mocha --require source-map-support/register --recursive dist/test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "preversion": "npm test",
    "version": "npm run build && conventional-changelog -p angular -v -r 0 > CHANGELOG.md && git add -A .",
    "postversion": "git push && git push --tags",
    "prepublish": "not-in-install && npm run build || echo 'In install cycle, skipping prepublish'",
    "precoverage": "npm run clean && tsc --inlineSourceMap",
    "coverage": "nyc --reporter lcov ./node_modules/.bin/mocha --recursive dist/test --all",
    "watch:build": "tsc --watch --sourceMap",
    "watch:test": "mocha --watch --recursive dist/test"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/pretend"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.9",
    "cz-conventional-changelog": "1.1.6",
    "in-publish": "2.0.0",
    "mocha": "2.5.3",
    "nock": "8.0.0",
    "nyc": "6.6.1",
    "rimraf": "2.5.2",
    "source-map-support": "0.4.1",
    "tslint": "3.12.1",
    "typescript": "1.8.10"
  },
  "dependencies": {
    "isomorphic-fetch": "2.2.1",
    "omni-fetch": "0.1.1"
  },
  "publishConfig": {
    "tag": "next"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "coverage",
      "dist/test"
    ]
  }
}
