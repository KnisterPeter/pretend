{
  "name": "pretend",
  "version": "3.0.0",
  "description": "A decorator based http webservice client written in typescript",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "index.d.ts",
    "src"
  ],
  "scripts": {
    "linter": "tslint --project ./tsconfig.json",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --sourceMap",
    "pretest": "npm run clean && tsc --inlineSourceMap",
    "test": "jest",
    "coverage": "codecov",
    "watch:build": "tsc --watch --sourceMap",
    "watch:test": "npm test -- --watch",
    "prerelease": "git checkout master && git pull origin master && npm test && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/pretend"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "license": "MIT",
  "devDependencies": {
    "@knisterpeter/standard-tslint": "1.7.2",
    "@types/jest": "25.2.1",
    "@types/node": "10.17.17",
    "codecov": "3.6.5",
    "coveralls": "3.1.0",
    "cz-conventional-changelog": "3.2.0",
    "isomorphic-fetch": "2.2.1",
    "isomorphic-form-data": "2.0.0",
    "jest": "26.0.1",
    "nock": "12.0.3",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.19",
    "standard-version": "7.1.0",
    "ts-jest": "25.4.0",
    "tslint": "6.1.2",
    "typescript": "3.8.3"
  },
  "optionalDependencies": {
    "isomorphic-fetch": "2.2.1",
    "isomorphic-form-data": "2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.tsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testURL": "http://localhost",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "packageRules": [
      {
        "depTypeList": [
          "devDependencies"
        ],
        "updateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      },
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      }
    ]
  }
}
